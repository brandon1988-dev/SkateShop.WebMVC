@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MidWestSkate Shop</h1>
    <p class="lead"></p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-3">
        <h3><strong>Products</strong></h3>
        <p>
            Check out the Products.
        </p>
        @Html.ActionLink("Check Products", "Index", "Product", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <div class="col-md-3">
        <h3><strong>Customers</strong></h3>
        <p>
            Customers in the directory.
        </p>
        @Html.ActionLink("Check Customers", "Index", "Customer", null, new { @class = "btn btn-warning btn large" })
    </div>
    <div class="col-md-3">
         <h3><strong>Transactions</strong></h3>
        <p>
            View Transactions
        </p>
        @Html.ActionLink("Check Transactions", "Index", "Transaction", null, new { @class = "btn btn-danger btn large" })
    </div>
    <div class="col-md-3">
         <h3><strong>Payments</strong></h3>
        <p>
            View Payments
        </p>
        @Html.ActionLink("View Payments", "Index", "Payment", null, new { @class = "btn btn-success btn large" })
    </div>
</div>

<div class="panel-footer">

</div>